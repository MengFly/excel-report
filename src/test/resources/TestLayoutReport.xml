<?xml version="1.0" encoding="UTF-8" ?>
<template xmlns="http://mengfly.github.io/excel-report/1.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://mengfly.github.io/excel-report/1.0.0  https://mengfly.github.io/xsd/excel-report-1.0.0.xsd"
          name="testReport"
          description="测试报表"
          version="1.0"
          author="MengFly"
          createAt="2019-07-11">

    <container>
        <VLayout alignPolicy="center">
            <Text size="10,2" text="${include==true? 'Include layout': 'Not include layout'}"/>
            <Text size="10,5" text="Test(width=10,height=5)" style="{width:auto}"/>
            <HLayout>
                <Text size="3,1" text="Test(width=3)" style="{fontColor:RED,fontBold:true,fontName:楷体}"/>
                <Text size="5,1" text="Test(width=5)"/>
            </HLayout>
            <HLayout size="-1,1">
                <Text size="-1,1" text="Test(weight=3)" style="{fontColor:RED,fontBold:true,fontName:楷体,weight:3}"/>
                <Text size="-1,1" text="Test(weight=5)" style="{weight:5}"/>
            </HLayout>
            <HLayout size="-1,1">
                <Text size="2,1" text="Test(width=2)" style="{fontColor:RED,fontBold:true,fontName:楷体,weight:3}"/>
                <Text size="-1,1" text="Test(weight=1)" style="{weight:1}"/>
            </HLayout>
        </VLayout>
    </container>
</template>